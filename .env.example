# Polymarket API Credentials
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_API_PASSPHRASE=your_api_passphrase
POLYMARKET_PRIVATE_KEY=your_private_key
POLYMARKET_WALLET_PROXY_ADDRESS=your_wallet_proxy_address

# API Endpoints (optional - uses defaults if not set)
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_INFO_URL=https://info-api.polymarket.com
POLYMARKET_NEG_RISK_URL=https://neg-risk-api.polymarket.com
POLYMARKET_DATA_API_URL=https://data-api.polymarket.com

# Network Configuration
POLYMARKET_CHAIN_ID=137

# Client Configuration
POLYMARKET_TIMEOUT=30
POLYMARKET_MAX_RETRIES=3

# Pagination Settings
POLYMARKET_DEFAULT_PAGE_SIZE=100
POLYMARKET_MAX_PAGE_SIZE=1000
POLYMARKET_MAX_TOTAL_RESULTS=10000
POLYMARKET_ENABLE_AUTO_PAGINATION=true

# Performance & Caching
POLYMARKET_ENABLE_RESPONSE_CACHING=true
POLYMARKET_WARN_LARGE_REQUESTS=true

# Logging Configuration
POLYMARKET_ENABLE_PERFORMANCE_LOGGING=false
POLYMARKET_LOG_MEMORY_USAGE=false
POLYMARKET_PERFORMANCE_LOG_THRESHOLD_MS=1000
POLYMARKET_LOG_LEVEL=INFO
POLYMARKET_LOG_FORMAT=json
POLYMARKET_ENABLE_CONSOLE_LOGGING=true
POLYMARKET_LOG_FILE_PATH=polymarket.log

# Rate Limiting Configuration
POLYMARKET_ENABLE_RATE_LIMITING=false
POLYMARKET_RATE_LIMITER_TYPE=token_bucket
POLYMARKET_REQUESTS_PER_SECOND=10
POLYMARKET_BURST_CAPACITY=20
POLYMARKET_REQUESTS_PER_WINDOW=100
POLYMARKET_WINDOW_SIZE_SECONDS=60
POLYMARKET_RATE_LIMIT_PER_HOST=true
POLYMARKET_RATE_LIMIT_TIMEOUT=30